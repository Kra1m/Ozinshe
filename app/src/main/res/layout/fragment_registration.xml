<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.login.LoginFragment">



    <ImageButton
        android:id="@+id/btnBackRegistration"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textTirkeluRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold_700"
        android:text="Тіркелу"
        android:textColor="@color/grey_900"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/btnBackRegistration"
        app:layout_constraintTop_toBottomOf="@+id/btnBackRegistration"
        android:layout_marginTop="24dp"
        />
    <TextView
        android:id="@+id/textAccountLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular_400"
        android:text="Деректерді толтырыңыз"
        android:textColor="@color/grey_500"
        android:textSize="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="@+id/textTirkeluRegistration"
        app:layout_constraintTop_toBottomOf="@+id/textTirkeluRegistration"
        />


    <TextView
        android:id="@+id/textEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold_700"
        android:text="Email"
        android:textColor="@color/grey_900"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/textAccountLogin"
        app:layout_constraintTop_toBottomOf="@+id/textAccountLogin"
        android:layout_marginTop="29dp"
        />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmailLogin">

        <EditText
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext_focus_action_12dp"
            android:drawableStart="@drawable/ic_email_icon"
            android:drawablePadding="8dp"
            android:hint="Сіздің email"
            android:inputType="textEmailAddress"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey_400" />

        <TextView
            android:id="@+id/textErrorLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sf_pro_display_regular_400"
            android:text="Қате формат"
            android:textColor="@color/red"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold_700"
        android:text="Құпия сөз"
        android:textColor="@color/grey_900"
        android:textSize="14dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/textInputPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_edittext_focus_action_12dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:hint="Сіздің құпия сөзіңіз"
        android:inputType="textEmailAddress"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey_400"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

    <ImageButton
        android:id="@+id/btnShowPasswordLogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_show_password"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/textInputPassword"
        app:layout_constraintBottom_toBottomOf="@id/textInputPassword"
        app:layout_constraintEnd_toEndOf="@id/textInputPassword"
        />

    <TextView
        android:id="@+id/textPasswordLogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold_700"
        android:text="Құпия сөзді қайталаңыз"
        android:textColor="@color/grey_900"
        android:textSize="14dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/textInputPassword"
        app:layout_constraintTop_toBottomOf="@+id/textInputPassword" />

    <EditText
        android:id="@+id/textInputPassword2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_edittext_focus_action_12dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:hint="Сіздің құпия сөзіңіз"
        android:inputType="textEmailAddress"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey_400"
        app:layout_constraintEnd_toEndOf="@+id/textInputPassword"
        app:layout_constraintStart_toStartOf="@+id/textInputPassword"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin2" />

    <ImageButton
        android:id="@+id/btnShowPasswordLogin2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_show_password"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/textInputPassword2"
        app:layout_constraintBottom_toBottomOf="@id/textInputPassword2"
        app:layout_constraintEnd_toEndOf="@id/textInputPassword2"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputPassword2">

        <TextView
            android:id="@+id/textErrorServerExistingEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_marginHorizontal="31dp"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_display_regular_400"
            android:text="Мұндай email-ы бар пайдаланушы тіркелген"
            android:textColor="@color/red"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_btn_12dp"
            android:fontFamily="@font/sf_pro_display_semibold_600"
            android:gravity="center"
            android:text="Тіркелу"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textCreateNewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular_400"
                android:text="Сізде аккаунт бар ма?"
                android:textColor="@color/grey_500"
                android:textSize="14dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold_600"
                android:textAllCaps="false"
                android:background="@color/transparent"
                android:text="Тіркелу"
                android:textColor="@color/primary_300"
                android:textSize="14dp"/>

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


