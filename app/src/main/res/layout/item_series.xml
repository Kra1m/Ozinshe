<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgTvSeries"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/style_corner_for_image_12dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTvSeriesNumbers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="1 -ші бөлім"
        android:fontFamily="@font/sf_pro_display_bold_700"
        android:textSize="14dp"
        android:textColor="@color/grey_900"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgTvSeries"
        app:layout_constraintStart_toStartOf="@+id/imgTvSeries"
        app:layout_constraintEnd_toEndOf="@+id/imgTvSeries"
        />

</androidx.constraintlayout.widget.ConstraintLayout>