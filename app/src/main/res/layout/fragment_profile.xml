<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarProfile"
            layout="@layout/toolbar_back_tittle_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:orientation="vertical"
            android:background="?attr/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarProfile" >

            <ImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:src="@drawable/icon_profile_picture"
                android:layout_gravity="center"/>
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent" />-->

            <TextView
                android:id="@+id/textProfileTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_bold_700"
                android:textAlignment="center"
                android:text="@string/profile_my_profile"
                android:textColor="?attr/colorTertiaryFixed"
                android:textSize="24dp"/>
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent" />-->


            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_regular_400"
                android:textAlignment="center"
                android:text="ali@gmail.com"
                android:textColor="@color/grey_400"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
<!--                app:layout_constraintTop_toBottomOf="@+id/textProfileTitle" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutProfileInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <LinearLayout
                android:id="@+id/btnUserDataEdit"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_personal_data"
                    android:fontFamily="@font/sf_pro_display_medium_500"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_personal_data"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_semibold_600"
                    android:textColor="@color/grey_400"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_button_next"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividor_1dp_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_change_password"
                    android:fontFamily="@font/sf_pro_display_medium_500"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_button_next"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividor_1dp_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/btnChangeLanguage"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_language"
                    android:fontFamily="@font/sf_pro_display_medium_500"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/textSelectedLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Қазақша"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_semibold_600"
                    android:textColor="@color/grey_400"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_button_next"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividor_1dp_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/btnPrivacyAppRules"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_terms_conditions"
                    android:fontFamily="@font/sf_pro_display_medium_500"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_button_next"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividor_1dp_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/btnSwitchMode"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_dark_mode"
                    android:fontFamily="@font/sf_pro_display_medium_500"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switchModeDayNight"
                    android:layout_width="52dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    app:kswBackColor="?attr/colorSwitchThumbNormal"
                    app:kswThumbColor="@color/white"
                    app:kswThumbRadius="24dp" />


            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>